{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ES2017", "DOM"],
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue"]
}
